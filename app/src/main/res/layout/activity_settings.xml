<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatTextView
      android:id="@+id/actvProtocol"
      style="@style/InputLabel"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_marginEnd="10dp"
      android:layout_marginStart="10dp"
      android:layout_marginTop="10dp"
      android:text="@string/protocol" />

    <Spinner
      android:id="@+id/spProtocols"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/actvProtocol"
      android:layout_marginEnd="10dp"
      android:layout_marginStart="10dp"
      android:layout_marginTop="10dp"
      android:entries="@array/protocols"
      tools:listitem="@layout/support_simple_spinner_dropdown_item" />

    <android.support.design.widget.TextInputLayout
      android:id="@+id/tilHost"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/spProtocols"
      android:layout_marginEnd="10dp"
      android:layout_marginStart="10dp"
      android:layout_marginTop="10dp"
      app:errorEnabled="true"
      app:errorTextAppearance="@style/TextAppearanceError">

      <android.support.design.widget.TextInputEditText
        android:id="@+id/tietHost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/host_hint"
        android:inputType="textWebEditText" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
      android:id="@+id/tilPort"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/tilHost"
      android:layout_marginEnd="10dp"
      android:layout_marginStart="10dp"
      android:layout_marginTop="10dp"
      app:errorEnabled="true"
      app:errorTextAppearance="@style/TextAppearanceError">

      <android.support.design.widget.TextInputEditText
        android:id="@+id/tietPort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/port_hint"
        android:inputType="number" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
      android:id="@+id/tilPage"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/tilPort"
      android:layout_marginEnd="10dp"
      android:layout_marginStart="10dp"
      android:layout_marginTop="10dp"
      app:errorEnabled="true"
      app:errorTextAppearance="@style/TextAppearanceError">

      <android.support.design.widget.TextInputEditText
        android:id="@+id/tietPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/page_hint"
        android:inputType="text" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
      android:id="@+id/tilUsername"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/tilPage"
      android:layout_marginEnd="10dp"
      android:layout_marginStart="10dp"
      android:layout_marginTop="10dp"
      app:errorEnabled="true"
      app:errorTextAppearance="@style/TextAppearanceError">

      <android.support.design.widget.TextInputEditText
        android:id="@+id/tietUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/username_hint"
        android:inputType="text" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
      android:id="@+id/tilPassword"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/tilUsername"
      android:layout_marginEnd="10dp"
      android:layout_marginStart="10dp"
      android:layout_marginTop="10dp"
      app:errorEnabled="true"
      app:errorTextAppearance="@style/TextAppearanceError"
      app:passwordToggleEnabled="true"
      app:passwordToggleTint="@color/textColor">

      <android.support.design.widget.TextInputEditText
        android:id="@+id/tietPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/password_hint"
        android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.AppCompatTextView
      android:id="@+id/actvCameraTimeout"
      style="@style/InputLabel"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/tilPassword"
      android:layout_marginEnd="10dp"
      android:layout_marginStart="10dp"
      android:layout_marginTop="10dp"
      android:text="@string/camera_timeout" />

    <Spinner
      android:id="@+id/spCameraTimeout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/actvCameraTimeout"
      android:layout_marginEnd="10dp"
      android:layout_marginStart="10dp"
      android:layout_marginTop="10dp"
      android:entries="@array/camera_timeout"
      tools:listitem="@layout/support_simple_spinner_dropdown_item" />

    <android.support.v7.widget.AppCompatTextView
      android:id="@+id/actvScanTimeout"
      style="@style/InputLabel"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/spCameraTimeout"
      android:layout_marginEnd="10dp"
      android:layout_marginStart="10dp"
      android:layout_marginTop="10dp"
      android:text="@string/scan_timeout" />

    <Spinner
      android:id="@+id/spScanTimeout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/actvScanTimeout"
      android:layout_marginEnd="10dp"
      android:layout_marginStart="10dp"
      android:layout_marginTop="10dp"
      android:entries="@array/scan_timeout"
      tools:listitem="@layout/support_simple_spinner_dropdown_item" />
  </RelativeLayout>
</ScrollView>
