<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <ImageButton
    android:id="@+id/ibLogo"
    android:layout_width="96dp"
    android:layout_height="96dp"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:contentDescription="@null"
    android:src="@mipmap/shopping_cart_white" />

  <android.support.design.widget.TextInputLayout
    android:id="@+id/tilTitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="10dp"
    android:layout_toEndOf="@id/ibLogo"
    app:errorEnabled="true"
    app:errorTextAppearance="@style/TextAppearanceError">

    <android.support.design.widget.TextInputEditText
      android:id="@+id/tietTitle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/title_hint"
      android:inputType="textCapSentences" />

  </android.support.design.widget.TextInputLayout>

  <android.support.design.widget.TextInputLayout
    android:id="@+id/tilCount"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/ibLogo"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="20dp"
    app:passwordToggleEnabled="false">

    <android.support.design.widget.TextInputEditText
      android:id="@+id/tietCount"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/count_hint"
      android:inputType="number" />
  </android.support.design.widget.TextInputLayout>


  <android.support.v7.widget.AppCompatImageView
    android:id="@+id/actvQRCode"
    android:layout_width="32dp"
    android:layout_height="32dp"
    android:layout_alignBottom="@+id/tilQRCode"
    android:layout_below="@id/tilCount"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:background="?android:attr/selectableItemBackground"
    app:srcCompat="@mipmap/camera_alt_white" />

  <android.support.design.widget.TextInputLayout
    android:id="@+id/tilQRCode"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_below="@id/tilCount"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="10dp"
    android:layout_toEndOf="@id/actvQRCode"
    app:passwordToggleEnabled="false">

    <android.support.design.widget.TextInputEditText
      android:id="@+id/tietQRCode"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/qrcode_hint"
      android:inputType="text" />
  </android.support.design.widget.TextInputLayout>

</RelativeLayout>